{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Express App",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--inspect-brk", "app.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      }
    }
  ]
}